<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <%- include layout/head %>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <!-- <h1>Your Conversations</h1> -->
            <div class="container">
            <blockquote class="quote-box">
              <p class="quotation-mark">
                â€œ
              </p>
              <p class="quote-text">
                <%= data[0].title %>
              </p>
              <hr>
              <div class="blog-post-actions"><center>
                <p  style="font-size:16px">
                  From : <%= data[0].User.username%>
                </p></center>
                <p class="blog-post-bottom pull-right" style="font-size:12px">
                  Date : <%= data[0].createdAt %>
                </p>

              </div>
            </blockquote>
          </div>
          <!-- conversations start here -->
          <% for(let i = 0; i < data[0].Messages.length; i++) { %>
          <% if(data[0].Messages[i].from === 1){ %>
            <div class="alert alert-success"><%= data[0].Messages[i].message %></div>
          <% } else {%>
            <div class="alert alert-success"><%= data[0].Messages[i].message %></div>
          <% }} %>
        </div>
      </div>
    </div>
  </body>
</html>
