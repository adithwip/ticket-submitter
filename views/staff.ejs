<!DOCTYPE html>
<html lang="en">
  <head>

    <%- include layout/head %>

  </head>
  <body>

    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <center>
            <h1><%= dataTiket[0].Departement.name %> Page</h1><br>
            <a href="#"><button type="button" class="btn btn-primary" name="button">Home</button></a>
            <a href="/home/<%= dataTiket[0].id %>/open-ticket"><button type="button" class="btn btn-warning" name="button">Open New Ticket</button></a>
            <a href="/staff/logout"><button type="button" name="button" class="btn btn-danger">Logout</button></a><br><br>
          <table class="table">
            <tr>
              <td align="center">
                No
              </td>
              <td align="center">
                Ticket ID
              </td>
              <td align="center">
                Ticket Title
              </td>
              <td>Username</td>
              <td align="center">
                Action
              </td>
            </tr>
            <% var i = 1; dataTiket.forEach( getTiket => { %>
              <tr>
                <td><%= i %><% i += 1 %></td>
                <td><%= getTiket.ticket %></td>
                <td><%= getTiket.title %></td>
                <% if(getTiket.User.username === null) { %>
                <td>no message</td>
                <% } else { %>
                <td><%= getTiket.User.username %></td>
                <% } %>
                <td>
                  <% if(getTiket.close_status === 1) {%>
                  <a href="/staff/<%= getTiket.DepartementId %>/<%= getTiket.id %>/view-conversations"><button type="button" class="btn btn-success" name="button">Open Ticket</button></a>
                  <a href="#"><button type="button" class="btn btn-danger" name="button">Close Ticket</button></a>
                  <% } else { %>
                    <button type="button" name="button" class="btn btn-default">solved!</button>
                  <%}%>
                </td>
              </tr>
            <% }) %>

          </table>
          </center>

        </div>
      </div>
    </div>
    <%- include layout/footer%>

  </body>
</html>
